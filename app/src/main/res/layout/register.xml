<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/colorPrimaryDark">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardviewbg"
        android:elevation="8dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:text="Register"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/EditEmail"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:drawableLeft="@drawable/ic_baseline_email_black"
                android:drawablePadding="10dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/lightblack"
                android:textSize="18sp" />
            <in.anshul.libray.PasswordEditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:layout_marginTop="10dp"
                android:hint="New Password"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/lightblack"
                android:textSize="18sp"
                app:hide_drawable="@drawable/hide_pass"
                app:password_visible="false"
                app:show_drawable="@drawable/show_pass" />

            <in.anshul.libray.PasswordEditText
                android:id="@+id/ConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:layout_marginTop="10dp"
                android:hint="Confirm New Password"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/lightblack"
                android:textSize="18sp"
                app:hide_drawable="@drawable/hide_pass"
                app:password_visible="false"
                app:show_drawable="@drawable/show_pass" />

            <Button
                android:id="@+id/ButtonRegister"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>